@model List<EShop.Domain.Domain_Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(120deg, #f0f2f5, #d6e4f0);
        font-family: 'Segoe UI', sans-serif;
    }

    .store-title {
        font-size: 3rem;
        text-align: center;
        margin-bottom: 2rem;
        font-weight: bold;
        color: #333;
    }

    .product-card {
        width: 100%;
        height: 100%;
        border-radius: 20px;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.7);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

        .product-card:hover {
            transform: scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        height: 250px;
        object-fit: contain;
        background-color: #fff;
        padding: 1rem;
    }

    .card-body {
        padding: 1.2rem;
        text-align: center;
        flex: 1;
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #2c3e50;
    }

    .card-footer {
        background: transparent;
        border-top: none;
        padding: 1rem;
    }

    .details-btn {
        background: #007bff;
        border: none;
        color: white;
        transition: background 0.3s ease;
        width: 100%;
    }

        .details-btn:hover {
            background: #0056b3;
        }
</style>

<div class="container py-5">

    <div class="row mb-4">
        <div class="col-md-12 text-end">
            <a class="btn btn-success px-4 py-2" asp-action="Create">
                <i class="fa-solid fa-plus"></i> Insert New Product
            </a>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 d-flex">
                <div class="product-card w-100">
                    <img class="card-img-top" src="@item.ProductImage" alt="Image for product!" />
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <h6>@item.ProductPrice $</h6>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn details-btn">
                            <i class="fa-solid fa-circle-info"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
