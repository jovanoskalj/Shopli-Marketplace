@using Microsoft.AspNetCore.Identity
@using EShop.Domain.Identity_Models
@inject SignInManager<EShopApplicationUser> SignInManager

@{
    ViewData["Title"] = "Home";
    ViewData["UseFullWidth"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Remove default margins and padding from main content when full width is used */
    body main {
        padding: 0 !important;
    }
    
    .hero-banner {
        background-image: url('/NewFolder/banner.jpg');
        background-size: cover;
        background-position: center;
        width: 100vw;
        height: 100vh;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        margin: 0;
        padding: 0;
        margin-left: calc(-50vw + 50%);
        margin-right: calc(-50vw + 50%);
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 600px;
        padding: 0 1rem;
    }

        .hero-content h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .hero-content p {
            font-size: 1.25rem;
            margin-bottom: 2rem;
        }

    .btn-group .btn {
        margin: 0.5rem;
        min-width: 150px;
    }

    .category-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .category-title {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .category-description {
        margin-bottom: 1.5rem;
    }

    /* Additional styles for featured categories section */
    .category-icon {
        font-size: 3rem;
    }

    .category-title {
        margin-top: 1rem;
        font-size: 1.5rem;
    }

    .category-description {
        margin-bottom: 1.5rem;
    }
</style>

<div class="hero-banner">
    <div class="overlay"></div>

    <div class="hero-content">
        <h1 class="fw-bold">Welcome to Shopli</h1>
        <p>Discover amazing products and shop with ease.</p>

        <div class="btn-group d-flex flex-wrap justify-content-center">
            @if (!SignInManager.IsSignedIn(User))
            {
                <a href="/Identity/Account/Register" class="btn btn-success">Register</a>
                <a href="/Identity/Account/Login" class="btn btn-primary">Login</a>
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-light">Continue as Guest</a>
            }
            else
            {
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Browse Products</a>
                <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-light">Shop by Category</a>
            }
        </div>
    </div>
</div>

<!-- Additional content section with container -->
<div class="container my-5">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="mb-4">Featured Categories</h2>
            <p class="lead">Explore our most popular product categories</p>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-laptop category-icon" style="color: #0d6efd;"></i>
                    <h5 class="card-title category-title">Electronics</h5>
                    <p class="card-text category-description">Latest gadgets and electronic devices</p>
                    <a href="/Categories" class="btn btn-outline-primary">Shop Electronics</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-book category-icon" style="color: #198754;"></i>
                    <h5 class="card-title category-title">Books</h5>
                    <p class="card-text category-description">Discover your next great read</p>
                    <a href="/Categories" class="btn btn-outline-success">Shop Books</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-shop category-icon" style="color: #dc3545;"></i>
                    <h5 class="card-title category-title">Fashion</h5>
                    <p class="card-text category-description">Trendy clothing and accessories</p>
                    <a href="/Categories" class="btn btn-outline-danger">Shop Fashion</a>
                </div>
            </div>
        </div>
    </div>
</div>
